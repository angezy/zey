<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
  <link rel="icon" type="image/png" href="../assets/img/favicon.png">
  <title>Nick Contacts</title>
  <meta name="author" content="Nick Contacts">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
  <!-- MDB -->
  <link rel="stylesheet" href="/public/css/mdb.min.css" />
  <link rel="stylesheet" href="/assets/css/contacts.css">
</head>

<body>
  <section id="bg">
    <div class="container py-5">
      <div class="row d-flex align-items-center justify-content-center">
        <h2 class="text-center"></h2>
        <p class="text-muted text-center">.</p>

        <div class="col-md-6">
          <div class="border shadow-0 mb-3 glass-card" style="width: 100%;">
            <div class="card-body rounded-4 text-light px-5 pt-4 pb-2">

              <form id="kanbanForm" method="POST" action="/api/contacts">
                <!-- Facebook Name -->

                <div class="row mb-4">
                  <div class="col">
                    <div data-mdb-input-init class="form-outline">
                      <input name="FacebookName" type="text" id="FacebookName" class="text-dark form-control" required />
                      <label class="form-label" for="FacebookName" placeholder="Enter Facebook Name">Facebook
                        Name</label>
                    </div>
                  </div>
                </div>

                <!-- Email -->
                <div class="row mb-4">
                  <div class="col">
                    <div data-mdb-input-init class="form-outline">
                      <input name="Email" type="email" id="Email" class="text-dark form-control" required />
                      <label class="form-label" for="Email"> Email</label>
                    </div>
                  </div>
                </div>

                <!-- Phone Number -->
                <div class="row mb-4">
                  <div class="col">
                    <div data-mdb-input-init class="form-outline">
                      <input name="PhoneNumber" type="tel" id="PhoneNumber" class="text-dark form-control" required />
                      <label class="form-label" for="PhoneNumber">Phone Number</label>
                    </div>
                  </div>
                </div>
                <!-- Role Selection -->
                <div class="row mb-4">
                  <div class="col">
                    <label class="form-label" >Whatâ€™s Your Specialty?</label>
                    <br>
                    <div class="form-check form-check-inline">
                      <input name="Role" class="form-check-input" type="radio" value="Disposition Wholesaler"
                        id="DispositionWholesaler" />
                      <label class="form-check-label" for="DispositionWholesaler">Disposition Wholesaler</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input name="Role" class="form-check-input" type="radio" value="Acquisition Wholesaler"
                        id="AcquisitionWholesaler" />
                      <label class="form-check-label" for="AcquisitionWholesaler">Acquisition Wholesaler</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input name="Role" class="form-check-input" type="radio" value="Realtor/Agent"
                        id="Realtor/Agent" />
                      <label class="form-check-label" for="Realtor/Agent">Realtor/Agent</label>
                    </div>

                    <div class="form-check form-check-inline">
                      <input name="Role" class="form-check-input" type="radio" value="specific Role:" id="otherRole" />
                      <label class="form-check-label" for="otherRole">Other</label>
                    </div>
                  </div>
                  <div data-mdb-input-init class="mt-3 form-outline" id="otherRoleInputContainer"
                    style="display: none;">
                    <input name="SpecificRole" type="text" id="SpecificRole" class="text-dark form-control"
                      placeholder="Please specify other " />
                    <label class="form-label" for="SpecificRole">Please specify other</label>
                  </div>
                </div>

                <!-- Chat Result -->
                <div class="row mb-4">
                  <div data-mdb-input-init class="form-outline">
                    <textarea name="chatResult" id="chatResult"
                      placeholder="flipping houses, acquiring contracts, or buying cash deals."
                      class="text-dark form-control" rows="3" required></textarea>
                    <label class="form-label" for="chatResult">What Best Describes You?*</label>
                  </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">Save Contact</button>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- MDB -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/8.1.0/mdb.umd.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <!-- Core JS Files -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/assets/js/contact.js"></script>
</body>

</html>
