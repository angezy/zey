<!-- Script to add active class to the current page link -->
<script>
  // Get the current page path from the URL
  const currentPath = window.location.pathname.split('/').pop();

  // Select all sidebar links
  const navLinks = document.querySelectorAll('#sidenav-main .nav-link');

  // Loop through each link to find the one that matches the current path
  navLinks.forEach(link => {
    // Get the href value of each link (relative path)
    const linkPath = link.getAttribute('href');

    // If the link's href matches the current page path, add the 'active' class
    if (linkPath === currentPath) {
      link.classList.add('active');
    } else {
      // Remove 'active' class if it's not the current page
      link.classList.remove('active');
    }
  });
</script>
